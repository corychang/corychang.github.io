<level>
	<width>1600</width>
	<height>900</height>

	<camera>
		<zoom>0.8</zoom>
	</camera>

	<background>
		<texture>Assets/level_cat_fish/background</texture>
	</background>

	<music>Assets/SFX_Music/Droning</music>

	<door>
		<x>5</x>
		<y>240</y>
		<key>door</key>
		<open>false</open>
		<behaviors>
			<behavior requireAll="true">
				<trigger type="LifeTrigger" objectToMonitor="fish" triggerOnAlive="True"  />
				<trigger type="LifeTrigger" objectToMonitor="fisherman" triggerOnAlive="True" />
				<response type="DoorOpenResponse" />	
			</behavior>
			<behavior requireAll="true">
				<trigger type="LifeTrigger" objectToMonitor="fish" triggerOnAlive="False"  />
				<response type="DoorCloseResponse" />
			</behavior>
			<behavior requireAll="true">
				<trigger type="LifeTrigger" objectToMonitor="fisherman" triggerOnAlive="False" />
				<response type="DoorCloseResponse" />
			</behavior>
		</behaviors>
	</door>

	<platforms>
		<platform>
			<x>0</x>
			<y>565</y>
			<texture>Assets/global/platform_large</texture>
			<boundingHeight>500</boundingHeight>
			<boundingWidth>1100</boundingWidth>
			<boundingOffsetX>0</boundingOffsetX>
			<boundingOffsetY>100</boundingOffsetY>
		</platform>

		<platform>
			<x>990</x>
			<y>35</y>
			<texture>Assets/global/platform_small</texture>
			<boundingHeight>210</boundingHeight>
			<boundingWidth>304</boundingWidth>
			<boundingOffsetX>29</boundingOffsetX>
			<boundingOffsetY>55</boundingOffsetY>
		</platform>
	</platforms>

	<player>
		<x>550</x>
		<y>380</y>
		<texture>Assets/global/death_dave</texture>
	</player>

	<interactiveObjects>
		<interactiveObject>
			<alive>true</alive>
			<x>1020</x>
			<y>-30</y>
			<key>cat</key>
			<texture>Assets/level_kid_cat/cat</texture>
  			<!-- TODO add standing cat animation -->
			<states>
				<sheet_width>3</sheet_width>
				<sheet_height>4</sheet_height>
				<alive_state>
					<start>1</start>
					<end>6</end>
					<loop>true</loop>
				</alive_state>
				<dead_state>
					<start>0</start>
					<end>0</end>
					<loop>false</loop>
				</dead_state>
			</states>
		</interactiveObject>

		<interactiveObject>
			<alive>true</alive>
			<x>50</x>
			<y>320</y>
			<scale>0.5</scale>
			<key>fisherman</key>
			<texture>Assets/level_fisherman/fisherman/fisherman</texture>
			<boundingOffsetX>-100</boundingOffsetX>
			<boundingOffsetY>-130</boundingOffsetY>
			<states>
				<sheet_width>3</sheet_width>
				<sheet_height>2</sheet_height>
				<alive_state>
					<start>0</start>
					<end>0</end>
					<loop>false</loop>
				</alive_state>
				<dead_state>
					<start>5</start>
					<end>5</end>
					<loop>false</loop>
				</dead_state>
				<transition_state>
					<start>2</start>
					<end>6</end>
					<loop>false</loop>
				</transition_state>
			</states>
		</interactiveObject>

		<interactiveObject>
			<alive>false</alive>
			<x>35</x>
			<y>550</y>
			<scale>0.8</scale>
			<key>fish</key>
			<texture>Assets/level_fisherman/fish</texture>
 			<!-- TODO add dead flopping animation-->
			<states>
				<sheet_width>2</sheet_width>
				<sheet_height>3</sheet_height>
				<alive_state>
					<start>0</start>
					<end>4</end>
					<loop>true</loop>
				</alive_state>
				<dead_state>
					<start>4</start>
					<end>4</end>
					<loop>false</loop>
				</dead_state>
			</states>
		</interactiveObject>
	</interactiveObjects>
</level>