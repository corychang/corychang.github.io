	<music>Assets/SFX_Music/Fisherman</music>

	<door>
		<x>2769</x>
		<y>238</y>
		<key>door</key>
		<open>true</open>
	</door>

	<platforms>
		<platform>
			<x>0</x>
			<y>443</y>
			<texture>Assets/global/platform_large</texture>
