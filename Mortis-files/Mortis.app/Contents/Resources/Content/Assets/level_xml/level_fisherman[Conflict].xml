	<player>
		<x>16</x>
		<y>266</y>
		<texture>Assets/global/death_dave</texture>
	</player>

	<interactiveObjects>
		<interactiveObject>
			<key>fisherman</key>
			<alive>true</alive>
			<x>493</x>
			<y>200</y>
			
			<scale>0.5</scale>
			<key>fisherman</key>
			<texture>Assets/level_fisherman/fisherman/fisherman</texture>
			<states>
				<sheet_width>3</sheet_width>
				<sheet_height>2</sheet_height>
				<alive_state>
					<start>0</start>
					<end>0</end>
					<loop>false</loop>
				</alive_state>
				<dead_state>
					<start>5</start>
					<end>5</end>
					<loop>false</loop>
				</dead_state>
				<transition_state>
					<start>2</start>
					<end>6</end>
					<loop>false</loop>
				</transition_state>
			</states>

			<behaviors>
				<behavior requireAll="true" oneTime="true">
					<trigger type="LifeTrigger" objectToMonitor	="fisherman" triggerOnAlive="false"  />
					
					<response type="MoveToTargetResponse" moveToTargetType="MoveToTargetVector" x="800" y="300" endOnClose="True"/>	
				</behavior>
				
				
