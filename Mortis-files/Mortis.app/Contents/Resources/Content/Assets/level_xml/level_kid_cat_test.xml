<!-- XML file for the kid cat level -->
<level>
	<!-- Note: the original level had bounding box X from -2000 to 4000 and Y from -2000 to 4000.
		So add 2000 to each x and y coord you see there -->
	<width>6000</width>
	<height>6000</height>
	
	<background>
		<texture>Assets/level_kid_cat/background</texture>
	</background>
	
	<door>
		<key>door</key>
		<x>1800</x>
		<y>2200</y>
		<open>true</open>
	</door>
	
	<platforms>
		<platform>
			<x>1850</x>
			<y>2600</y>
			<texture>Assets/global/platform_large</texture>
			<boundingHeight>500</boundingHeight>
			<boundingWidth>1100</boundingWidth>
			<boundingOffsetX>0</boundingOffsetX>
			<boundingOffsetY>100</boundingOffsetY>
		</platform>
		
		<platform>
			<x>3100</x>
			<y>2800</y>
			<texture>Assets/global/platform_small</texture>
			<boundingHeight>500</boundingHeight>
			<boundingWidth>1100</boundingWidth>
			<boundingOffsetX>0</boundingOffsetX>
			<boundingOffsetY>100</boundingOffsetY>
		</platform>
		
		<platform>
			<x>3500</x>
			<y>2750</y>
			<texture>Assets/global/platform_large</texture>
			<boundingHeight>500</boundingHeight>
			<boundingWidth>1100</boundingWidth>
			<boundingOffsetX>0</boundingOffsetX>
			<boundingOffsetY>100</boundingOffsetY>
		</platform>
	</platforms>
	
	<player>
		<x>3080</x>
		<y>2400</y>
		<texture>Assets/global/death_dave</texture>
	</player>
		
	<interactiveObjects>
		<interactiveObject>
			<key>tree</key>
			<alive>true</alive>
			<x>4000</x>
			<y>2400</y>
			<texture>Assets/level_kid_cat/tree</texture>
			<scale>0.5</scale>
			<states>
				<sheet_width>2</sheet_width>
				<sheet_height>1</sheet_height>
				<alive_state>
					<start>0</start>
					<end>0</end>
					<loop>true</loop>
				</alive_state>
				<dead_state>
					<start>1</start>
					<end>1</end>
					<loop>true</loop>
				</dead_state>
			</states>
			<!-- add tree dead level_kid_cat/tree_dead -->
		</interactiveObject>
		
		<interactiveObject>
			<key>cat</key>
			<alive>false</alive>
			<x>1800</x>
			<y>2570</y>
			<texture>Assets/level_kid_cat/cat</texture>
			
			<states>
				<sheet_width>3</sheet_width>
				<sheet_height>4</sheet_height>
				<alive_state>
					<start>1</start>
					<end>6</end>
					<loop>true</loop>
				</alive_state>
				<dead_state>
					<start>0</start>
					<end>0</end>
					<loop>true</loop>
				</dead_state>
				<moving_state>
					<start>7</start>
					<end>11</end>
					<loop>true</loop>
				</moving_state>
			</states>
			
			<behaviors>
				<behavior requireAll="true">
					<trigger type="LifeTrigger" objectToMonitor	="kid" triggerOnAlive="true"  />
					
					<response type="MoveToTargetResponse" moveToTargetType="MoveToTargetObject" targetName="door" />	
				</behavior>
			</behaviors>
			<!-- TODO: animations and behaviors -->
		</interactiveObject>
		
		<interactiveObject>
			<key>kid</key>
			<alive>true</alive>
			<x>1800</x>
			<y>2300</y>
			<texture>Assets/level_kid_cat/kid</texture>
			<scale>0.75</scale>
			<!-- TODO: animations and behaviors -->
			
			<states>
				<sheet_width>4</sheet_width>
				<sheet_height>7</sheet_height>
				<alive_state>
					<start>0</start>
					<end>3</end>
					<loop>true</loop>
				</alive_state>
				<dead_state>
					<start>27</start>
					<end>9</end>
					<loop>false</loop>
					<reverse>true</reverse>
				</dead_state>
				<moving_state>
					<start>4</start>
					<end>8</end>
					<loop>true</loop>
				</moving_state>
			</states>
			
			<behaviors>
				<behavior requireAll="true">
					<trigger type="LifeTrigger" objectToMonitor	="cat" triggerOnAlive="true"  />
					
					<response type="MoveToTargetResponse" moveToTargetType="MoveToTargetObject" targetName="door" xOnly="True" endOnClose="True" speed="1.0"/>	
				</behavior>
			</behaviors>
		</interactiveObject>
	</interactiveObjects>
	
</level>